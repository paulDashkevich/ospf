! -*- ospf -*-
!
! OSPFd sample configuration file
!
!
hostname {{ router_name }}
password zebra

log stdout
log file /var/log/quagga/ospfd.log

interface eth1
ip ospf mtu-ignore
ip ospf network point-to-point
ip ospf cost {{ eth1_cost }}
ip ospf hello-interval 5
ip ospf dead-interval 10

interface eth2
ip ospf mtu-ignore
ip ospf network point-to-point
ip ospf cost {{ eth2_cost }}
ip ospf hello-interval 5
ip ospf dead-interval 10

router ospf
ospf router-id {{ router_area }}
network {{ router_lan }}  area {{ router_area }}
network {{ A0net1 }} area 0.0.0.0
network {{ A0net2 }} area 0.0.0.0
